#!/usr/bin/env elf
nums: "day1.txt" lines map({ [&read, "   ", &read] match($) }),
left: nums map(&_0) sort,
right: nums map(&_1) sort,
0 to(left len dec) fold({acc,i| acc + (left nth(i) - right nth(i)) abs }, 0),
"Part1: %d" fmt(_) print,

counts: nums group(&_1) map(&len),
nums fold({acc,n| acc + (n _0 * counts at(n _0) if({$}, 0))},0),
"Part2: %d" fmt(_) print